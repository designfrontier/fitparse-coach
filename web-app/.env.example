# Strava API Configuration
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret

# Server Configuration
PORT=5555
FRONTEND_URL=http://localhost:3333

# AI Coaching Configuration
# Provider options: 'openai' or 'anthropic'
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
# Model options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
AI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (if using Claude)
# ANTHROPIC_API_KEY=your_anthropic_api_key
# AI_MODEL=claude-3-opus-20240229

# Conversation History Settings
# Number of previous messages to maintain in context
AI_SLIDING_WINDOW=10

# Session Secret (generate a random string)
SESSION_SECRET=your_session_secret_here
